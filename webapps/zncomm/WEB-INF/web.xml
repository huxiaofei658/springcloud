<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	<display-name>神盾押运 Web服务器</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/ws</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.providers</param-name>
		<param-value>cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.ExceptionHandler</param-value>
		<!--<param-value>cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.ExceptionHandler,cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.AuthcFilter</param-value>-->		
	</context-param>

	<filter>
		<filter-name>auth</filter-name>
		<filter-class>cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.AuthcFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>auth</filter-name>
		<url-pattern>/ws/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter> 
		<filter-name>cors</filter-name> 
		<filter-class>cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.SimpleCORSFilter</filter-class> 
	</filter> 
	<filter-mapping> 
		<filter-name>cors</filter-name> 
		<url-pattern>/ws/*</url-pattern> 
	</filter-mapping>
	<!--<filter>
		<filter-name>protection</filter-name> 
		<filter-class>cn.prismnetwork.prod.cs.shendunyayun.webserver.provider.ProtectionFilter</filter-class> 
	</filter>
	<filter-mapping> 
		<filter-name>protection</filter-name> 
		<url-pattern>/command/index.html</url-pattern> 
	</filter-mapping>
	<filter-mapping> 
		<filter-name>protection</filter-name> 
		<url-pattern>/command/track.html</url-pattern> 
	</filter-mapping>-->
	
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
	</listener>
	<listener>
		<listener-class>org.jboss.resteasy.plugins.spring.SpringContextLoaderListener</listener-class>
	</listener>
	<!--<listener>
		<listener-class>cn.prismnetwork.prod.cs.shendunyayun.webserver.listener.GPSDataDownloadListener</listener-class>
	</listener>-->
	<listener>
		<listener-class>cn.prismnetwork.prod.cs.shendunyayun.webserver.listener.MongoCloseListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>ResteasyServlet</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResteasyServlet</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>
</web-app>
